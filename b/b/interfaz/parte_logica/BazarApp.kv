        orientation: "vertical"
        padding: 20
        spacing: 20

        Label:
            text: "Bienvenidos perra :D"
            font_size: 40
            size_hint_y: None
            height: "60dp"

        BoxLayout:
            size_hint_y: None
            height: "120dp"
            spacing: 15

            Button:
                text: "control de stock"
                on_release: app.root.current = "stock"

            Button:
                text: "ventas"
                on_release: app.root.current = "ventas"

            Button:
                text: "reportes"
                on_release: app.root.current = "reportes"


